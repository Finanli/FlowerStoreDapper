@model IEnumerable<CicekciBaciDapper.Models.MusterilerModel>

@{
    ViewBag.Title = "Index";
}

<h2>Müşteriler</h2>

<p>
    @Html.ActionLink("Ekle", "EY", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MusteriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MusteriAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "EY", new {  id=item.MusteriNo }, new { @class = "btn btn-warning" }) |
            
            @Html.ActionLink("Sil", "Delete", new { id = item.MusteriNo }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
